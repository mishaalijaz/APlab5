<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ResetButton" Content="Reset" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="226,201,0,0" Background="#FFE0E07F" Click="ResetButton_Click" Height="20" Grid.ColumnSpan="2"/>
        <Button x:Name="CountButton" Content="Add Count" HorizontalAlignment="Left" Margin="96,201,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Background="#FF8CD443" Height="20" Grid.ColumnSpan="2"/>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Margin="352,201,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.12,0.05" Background="#FFF56852" Click="QuitButton_Click" Grid.Column="1" Height="20"/>
        <TextBlock x:Name="mytext" HorizontalAlignment="Left" Margin="240,126,0,0" TextWrapping="Wrap" Text="Count" VerticalAlignment="Top" Height="16" Width="38" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
